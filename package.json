{
  "name": "git-tree",
  "version": "0.1.0",
  "private": true,
  "author":{
    "name": "Jackson BelizÃ¡rio",
    "email": "jacksonluizzb@gmail.com",
    "url": "https://www.linkedin.com/in/jacksonbelizario/"
  },
  "main": "main.js",
  "build": {
    "appId": "git-tree",
    "directories":{
      "buildResources": "assets"
    },
    "win": {
      "iconUrl": "./src/assets/images/git-branch.svg"
    },
    "mac": {
      "iconUrl": "./src/assets/images/git-branch.svg"
    }
  },
  "scripts": {
    "rebuild": "electron-rebuild --runtime=electron --target=10.4.0 --disturl=https://atom.io/download/electron --build-from-source",
    "electron": "cross-env NODE_ENV=dev nodemon --exec \"\"electron .\"\"",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "start:react": "cross-env BROWSER=none react-app-rewired start",
    "start": "concurrently \"yarn start:react\" \"yarn start:electron\"",
    "build:react": "react-app-rewired build",
    "build:electron": "electron-packager . --overwrite --prune --asar --out=release-builds --ignore=/src",
    "build": "yarn build:react && yarn build:electron",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@blueprintjs/core": "^3.24.0",
    "@blueprintjs/timezone": "^3.6.1",
    "electron-is-dev": "^1.1.0",
    "localforage": "^1.7.3",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "nodegit": "^0.27.0",
    "prism-color-variables": "^1.0.0",
    "react": "^16.13.1",
    "react-diff-view": "^2.4.3",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-perfect-scrollbar": "^1.5.8",
    "react-scripts": "3.4.1",
    "react-split-pane": "^2.0.3",
    "redux-zero": "^5.1.3",
    "redux-zero-persist": "^0.2.6",
    "refractor": "^3.0.0",
    "tailwindcss": "^1.3.5"
  },
  "devDependencies": {
    "@svgr/webpack": "^5.3.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/moment-timezone": "^0.5.13",
    "@types/nodegit": "^0.26.2",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.5",
    "@types/refractor": "^2.8.0",
    "autoprefixer": "^9.7.6",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "electron": "10.4.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-packager": "^15.2.0",
    "electron-rebuild": "2.3.5",
    "file-loader": "^6.0.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.2",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "react-app-rewire-postcss": "^3.0.2",
    "react-app-rewire-scss": "^1.0.2",
    "react-app-rewired": "^2.1.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1"
  }
}
